<h2>Import search synonyms</h2>

<%= simple_form_for :synonyms_import, url: synonyms_import_path do |f| %>

  <p>Upload CSV with synonyms. Synonyms are overriden if ID is provided</p>

  <div>
    <%= f.input :file, as: :file %>
  </div>

  <div class='form-actions'>
    <%= f.submit 'Import synonyms from CSV', class: 'btn btn-primary' %>
  </div>
<% end %>
