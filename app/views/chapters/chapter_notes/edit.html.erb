<div class="page-header">
  <h1>Edit Chapter Note</h1>
</div>

<%= simple_form_for @chapter_note, url: chapter_chapter_note_path(@chapter)  do |f| %>
  <div class='row'>
    <div class='span12'>
      <%= f.input :chapter_title, disabled: true, as: :string, label: 'Chapter', input_html: { class: 'span6', value: @chapter.goods_nomenclature_item_id } %>
    </div>
  </div>

  <%= render 'fields', f: f %>

  <div class='row'>
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= link_to "Back", :back, class: 'btn' %>
      <%= link_to "Remove", chapter_chapter_note_path(chapter), method: :delete, data: {confirm: 'Are you sure? There is no undo.', disable: 'Working'}, class: 'btn btn-small btn-danger' %>
    </div>
  </div>
<% end %>
