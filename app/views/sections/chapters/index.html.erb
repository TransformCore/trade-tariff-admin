<div class='row'>
  <%= link_to 'Edit section notes', root_path %>

  <h3>Chapters of section: <%= section.title %></h3>

  <table class='table table-bordered table-striped table-condensed table-chapters'>
    <thead>
      <tr>
        <th class='span1'>Chapter</th>
        <th class='span10'>Title</th>
        <th class='span1'>Notes</th>
      </tr>
    </thead>
    <tbody>
      <% @chapters.each do |chapter| %>
        <tr id='<%= dom_id(chapter) %>'>
          <td><%= chapter.short_code %></td>
          <td><%= chapter.description.titleize %></td>
          <td>
            <% if chapter.has_chapter_note? %>
              <%= link_to "Edit", edit_chapter_chapter_note_path(chapter), class: 'btn btn-small btn-primary' %>
            <% else %>
              <%= link_to "Add", new_chapter_chapter_note_path(chapter), class: 'btn btn-small' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
